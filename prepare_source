debian_version="1.7.24_ds1-10"
version_orig="2.1.6"
version="${version_orig}-0"

version_suffix=gl2~bp1877

DEBIAN_SRC=$(mktemp -d)
git clone -b "debian/$debian_version" --depth=1 https://salsa.debian.org/go-team/packages/containerd.git $DEBIAN_SRC
pushd $DEBIAN_SRC
git sparse-checkout set debian
rm -fR debian/patches
popd

cp -rp "$DEBIAN_SRC/debian" "$dir/src/"
rm -fR "$DEBIAN_SRC"

git_src -b "v$version_orig" https://github.com/containerd/containerd

import_upstream_patches
apply_patches
